{
  "name": "hypcast",
  "version": "0.0.1",
  "description": "Easily stream television over the Internet with HTTP Live Streaming",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "yarn run build:server & yarn run build:client",
    "build:mini": "yarn run build:server & yarn run build:client:mini",
    "build:server": "babel server -d dist/server",
    "build:client": "webpack --progress --config webpack.config.js",
    "build:client:mini": "webpack --progress --config webpack.config.js -p",
    "watch:client": "webpack --progress --config webpack.config.js --watch",
    "eslint:server": "eslint server",
    "eslint:client": "eslint --ext .js,.jsx client",
    "clean": "rm -rf dist/",
    "docker:build": "sudo docker build --pull -t docker.alexhamlin.co/ahamlinman/hypcast .",
    "docker:dev": "sudo docker run --rm -it --device=/dev/dvb -p 9400:9400 -v \"$(pwd):/hypcast\" -v /etc/hypcast:/hypcast/config:ro --name=hypcast-dev docker.alexhamlin.co/ahamlinman/hypcast",
    "docker:run": "sudo docker run --restart=always --device=/dev/dvb -d -p 9400:9400 -v /etc/hypcast:/hypcast/config:ro --name=hypcast docker.alexhamlin.co/ahamlinman/hypcast",
    "docker:restart": "sudo docker stop hypcast && sudo docker rm hypcast && yarn run docker:run",
    "start": "NODE_ENV=production node dist/server/index.js"
  },
  "keywords": [
    "tv",
    "television",
    "stream",
    "hls"
  ],
  "author": "Alex Hamlin",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://gitlab.alexhamlin.co/ahamlinman/hypcast.git"
  },
  "devDependencies": {
    "axios": "^0.16.1",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.23.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-react-jsx": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-es2015": "^6.22.0",
    "bootstrap": "^3.3.7",
    "css-loader": "^0.28.0",
    "eslint": "^4.1.0",
    "eslint-plugin-react": "^7.0.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.1",
    "hls.js": "^0.7.6",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.28.0",
    "less": "^2.7.2",
    "less-loader": "^4.0.2",
    "lodash": "^4.6.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-transition-group": "^1.1.2",
    "socket.io-client": "^2.0.1",
    "style-loader": "^0.18.1",
    "webpack": "^3.0.0"
  },
  "dependencies": {
    "byline": "^5.0.0",
    "express": "^4.13.4",
    "fluent-ffmpeg": "^2.1.2",
    "machina": "^2.0.0-1",
    "socket.io": "^2.0.1",
    "tmp": "^0.0.33"
  }
}
