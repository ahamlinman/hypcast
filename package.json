{
  "name": "hypcast",
  "version": "0.0.1",
  "description": "Easily stream television over the Internet with HTTP Live Streaming",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "yarn run build:server & yarn run build:client",
    "build:mini": "yarn run build:server & yarn run build:client:mini",
    "build:server": "tsc -p server --listEmittedFiles",
    "build:client": "webpack --progress --config webpack.config.js --mode development",
    "build:client:mini": "webpack --progress --config webpack.config.js --mode production",
    "watch:client": "webpack --progress --config webpack.config.js --watch --mode development",
    "clean": "rm -rf dist/",
    "docker:build": "sudo docker build --pull -t docker.alexhamlin.co/ahamlinman/hypcast .",
    "docker:dev": "sudo docker run --rm -it --device=/dev/dvb -p 9400:9400 -v \"$(pwd):/hypcast\" -v /etc/hypcast:/hypcast/config:ro --tmpfs /tmp --name=hypcast-dev docker.alexhamlin.co/ahamlinman/hypcast",
    "docker:run": "sudo docker run --restart=always --device=/dev/dvb -d -p 9400:9400 -v /etc/hypcast:/hypcast/config:ro --tmpfs /tmp --name=hypcast docker.alexhamlin.co/ahamlinman/hypcast",
    "docker:stop": "sudo docker stop hypcast && sudo docker rm hypcast",
    "docker:restart": "yarn run docker:stop && yarn run docker:run",
    "eslint:server": "eslint --ext .js,.ts server",
    "eslint:client": "eslint --ext .js,.jsx,.ts,.tsx client",
    "nsp": "nsp check",
    "start": "NODE_ENV=production node dist/server/index.js"
  },
  "keywords": [
    "tv",
    "television",
    "stream",
    "hls"
  ],
  "author": "Alex Hamlin",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://gitlab.alexhamlin.co/ahamlinman/hypcast.git"
  },
  "dependencies": {
    "byline": "^5.0.0",
    "express": "^4.16.3",
    "fluent-ffmpeg": "^2.1.2",
    "machina": "^2.0.0-1",
    "socket.io": "^2.0.1",
    "tmp": "^0.0.33"
  },
  "devDependencies": {
    "@types/byline": "^4.2.31",
    "@types/express": "^4.16.0",
    "@types/hls.js": "^0.10.1",
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.6",
    "@types/react-transition-group": "^2.0.11",
    "@types/socket.io": "^1.4.34",
    "@types/socket.io-client": "^1.4.32",
    "@types/tmp": "^0.0.33",
    "awesome-typescript-loader": "^5.0.0",
    "bootstrap": "^3.3.7",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "hls.js": "^0.10.1",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^3.0.6",
    "less": "^2.7.2",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.4.0",
    "react": "^16.1.0",
    "react-dom": "^16.1.0",
    "react-transition-group": "^2.2.1",
    "socket.io-client": "^2.0.1",
    "style-loader": "^0.22.1",
    "typescript": "^3.0.1",
    "webpack": "^4.1.1",
    "webpack-cli": "^3.0.3"
  },
  "optionalDependencies": {
    "eslint": "^5.3.0",
    "eslint-plugin-react": "^7.0.1",
    "nsp": "^3.1.0",
    "typescript-eslint-parser": "^18.0.0"
  }
}
