{
  "name": "hypcast",
  "version": "0.0.1",
  "description": "Easily stream television over the Internet with HTTP Live Streaming",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "yarn run build:server & yarn run build:client",
    "build:mini": "yarn run build:server & yarn run build:client:mini",
    "build:server": "tsc -p server --listEmittedFiles",
    "build:client": "webpack --progress --config webpack.config.js --mode development",
    "build:client:mini": "webpack --progress --config webpack.config.js --mode production",
    "watch:client": "webpack --progress --config webpack.config.js --watch --mode development",
    "clean": "rm -rf dist/",
    "docker:build": "docker build --pull -t ahamlinman/hypcast .",
    "docker:dev": "docker run --rm -it --device /dev/dvb -p 9400:9400 -v \"$(pwd):/hypcast\" -v /etc/hypcast:/hypcast/config:ro --tmpfs /tmp --name hypcast-dev ahamlinman/hypcast",
    "docker:pull": "docker pull ahamlinman/hypcast",
    "docker:run": "docker run --restart always --device /dev/dvb -d -p 9400:9400 -v /etc/hypcast:/hypcast/config:ro --tmpfs /tmp --name hypcast ahamlinman/hypcast",
    "docker:stop": "docker stop hypcast && docker rm hypcast",
    "docker:restart": "yarn run docker:stop && yarn run docker:run",
    "eslint:server": "eslint --ext .js,.ts server",
    "eslint:client": "eslint --ext .js,.jsx,.ts,.tsx client",
    "start": "NODE_ENV=production node dist/server/index.js"
  },
  "keywords": [
    "tv",
    "television",
    "stream",
    "hls"
  ],
  "author": "Alex Hamlin",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahamlinman/hypcast.git"
  },
  "dependencies": {
    "byline": "^5.0.0",
    "express": "^4.16.3",
    "fluent-ffmpeg": "^2.1.2",
    "machina": "^4.0.2",
    "socket.io": "^2.0.1",
    "tmp": "^0.1.0"
  },
  "devDependencies": {
    "@types/byline": "^4.2.31",
    "@types/express": "^4.16.0",
    "@types/hls.js": "^0.12.0",
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.6",
    "@types/react-transition-group": "^2.0.11",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "@types/tmp": "^0.1.0",
    "awesome-typescript-loader": "^5.0.0",
    "bootstrap": "^3.3.7",
    "css-loader": "^3.0.0",
    "cssnano": "^4.0.5",
    "file-loader": "^4.0.0",
    "hls.js": "^0.12.2",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^3.0.6",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.7.0",
    "postcss-loader": "^3.0.0",
    "react": "^16.1.0",
    "react-dom": "^16.1.0",
    "react-transition-group": "^4.0.1",
    "socket.io-client": "^2.0.1",
    "style-loader": "^0.23.1",
    "typescript": "^3.0.1",
    "webpack": "^4.1.1",
    "webpack-cli": "^3.0.3"
  },
  "optionalDependencies": {
    "@typescript-eslint/parser": "^1.1.0",
    "eslint": "^5.3.0",
    "eslint-plugin-react": "^7.0.1"
  }
}
