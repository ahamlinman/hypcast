{
  "name": "hypcast",
  "version": "0.0.1",
  "description": "Easily stream television over the Internet with HTTP Live Streaming",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:server & npm run build:client",
    "build:mini": "npm run build:server & npm run build:client:mini",
    "build:server": "babel lib -d dist",
    "build:client": "browserify client/hypcast.js -o client/hypcast.dist.js -t babelify",
    "build:client:mini": "browserify client/hypcast.js -o client/hypcast.dist.js -t babelify -g uglifyify",
    "clean": "rm -rf dist/ & rm client/*.dist.js",
    "docker:build": "sudo docker build -t ahamlinman/hypcast .",
    "docker:run": "sudo docker run --restart=always --device=/dev/dvb -d -p 9400:9400 --name=hypcast ahamlinman/hypcast",
    "start": "node dist/index.js"
  },
  "keywords": [
    "tv",
    "television",
    "stream",
    "hls"
  ],
  "author": "Alex Hamlin",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "bitbucket:ahamlinman/hypcast"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "uglifyify": "^3.0.1"
  },
  "dependencies": {
    "byline": "^4.2.1",
    "express": "^4.13.4",
    "fluent-ffmpeg": "^2.0.1",
    "hls.js": "^0.5.17",
    "jquery": "^2.2.2",
    "lodash": "^4.6.1",
    "machina": "^2.0.0-1",
    "socket.io": "^1.4.5",
    "socket.io-client": "^1.4.5",
    "tmp": "0.0.28",
    "touch": "^1.0.0"
  }
}
