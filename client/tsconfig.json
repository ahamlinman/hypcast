{
  "compilerOptions": {
    "alwaysStrict": true,
    "jsx": "react",
    "lib": [
      "DOM",
      "ES2017"
    ],
    "module": "ES2015",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "ES2017"
  }
}
